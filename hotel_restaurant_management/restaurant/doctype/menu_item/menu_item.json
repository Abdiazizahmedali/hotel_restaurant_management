{
    "doctype": "DocType",
    "name": "Menu Item",
    "module": "Restaurant",
    "custom": 0,
    "fields": [
        {"fieldname": "item_code", "fieldtype": "Data", "label": "Item Code", "reqd": 1},
        {"fieldname": "item_name", "fieldtype": "Data", "label": "Item Name", "reqd": 1},
        {"fieldname": "category", "fieldtype": "Select", "label": "Category", "options": "Starter\nMain Course\nDessert\nBeverage\nOther"},
        {"fieldname": "price", "fieldtype": "Currency", "label": "Price", "reqd": 1},
        {"fieldname": "is_available", "fieldtype": "Check", "label": "Is Available", "default": 1},
        {"fieldname": "description", "fieldtype": "Small Text", "label": "Description"},
        {"fieldname": "image", "fieldtype": "Attach Image", "label": "Image"}
    ],
    "permissions": [
        {"role": "System Manager", "read": 1, "write": 1, "create": 1, "delete": 1},
        {"role": "Restaurant Manager", "read": 1, "write": 1, "create": 1, "delete": 1},
        {"role": "Waiter", "read": 1}
    ]
} 